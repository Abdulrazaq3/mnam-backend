{
    "$schema": "https://json.schemastore.org/railwayconfig",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "python -m gunicorn app.main:app -w 2 -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:$PORT --timeout 120",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 30,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}